---
import {Icon} from "astro-icon/components";
import CNCF_LOGO from "../assets/CNCF.svg";
import {Picture} from "astro:assets";

interface FooterLinks {
    icon?: string;
    content?: string;
    url: string;
}

const footerLinks: FooterLinks[] = [{
    icon: 'bx:bxl-github',
    url: "https://github.com/serverless-devs/serverless-devs"
}, {
    icon: 'bx:bxl-git',
    url: 'https://gitee.com/serverless-devs/Serverless-Devs'
}, {
    content: '帮助文档',
    url: '/docs/overview'
}, {
    content: 'Serverless 社区',
    url: 'http://i.serverless-devs.com/'
}, {
    content: 'Registry',
    url: 'https://registry.serverless-devs.com/'
}];

const contactWays = [{
    name: "钉钉",
    link: ""
}, {
    name: "微信",
    link: ""
}, {
    name: "邮箱",
    link: ""
}, {
    name: "Github",
    link: "https://github.com/Serverless-Devs/Serverless-Devs/issues"
}, {
    name: "Gitee",
    link: "https://gitee.com/serverless-devs/Serverless-Devs/issues"
}]
---

<footer class="my-40 mb-10">
    <div class="flex flex-col items-center gap-2">
        <p class="text-info">Serverless Devs 是 <a href="https://cncf.io/" class="text-accent">CNCF (云原生基金会)</a>
            沙箱项目</p>
        <Picture
                src={CNCF_LOGO}
                alt="CNCF"
                loading="eager"
                format="avif"
        />
    </div>

    <div class="mt-40 container mx-auto px-4 sm:px-6 lg:px-8 py-5 md:py-10 bg-[#1e1f24] rounded-3xl text-white !pb-32">
        <div class="grid grid-cols-8 lg:grid-cols-12">
            <div class="p-4 col-span-8 flex flex-col gap-5">
                <h2 class="text-2xl font-medium">联系我们</h2>
                <p class="text-[#6e7587] leading-loose">无论是调研Serverless工具链，还是想参与贡献项目，都可以和我们取得联系。<br>
                    Serverless Devs社区欢迎每一位同学和我们一同玩转Serverless,<br>和我们一同建设
                    Serverless开发者生态，繁荣Serverless社区。</p>
                <div class="flex flex-row flex-wrap gap-4">
                    {
                        contactWays.map(way => (
                                <a href={way.link} target="_blank" rel="noreferrer">
                                    <p class="bg-[#4c505d] text-white text-sm px-7 py-3 rounded-3xl gap-3 text-center text-nowrap">{way.name}</p>
                                </a>
                        ))
                    }
                </div>
            </div>

            <div class="col-span-4 lg:col-span-2">
                <div class="rounded-lg p-4">
                    <h2 class="text-sm font-medium mb-4 text-info">DOCUMENTATION</h2>
                    <div class="flex flex-col space-y-2 text-white text-sm mt-10">
                        <a>帮助文档</a>
                        <a>Serverless社区</a>
                        <a>Registry</a>
                    </div>
                </div>
            </div>

            <div class="col-span-4 lg:col-span-2">
                <div class="rounded-lg p-4">
                    <h2 class="text-sm font-medium mb-4 text-info">RESOURCES (文案占位)</h2>
                    <div class="flex flex-col space-y-2 text-white text-sm mt-10">
                        <a>Community (文案占位)</a>
                        <a>CLoud Service MSE (文案占位)</a>
                        <a>CLoud Service EDAS (文案占位)</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="text-center text-sm text-info-500 font-light mt-40">
        Copyright © {new Date().getFullYear()} The Linux Foundation. All rights reserved.<br>
        The Linux Foundation has registered trademarks and uses trademarks.<br>
        For a list of trademarks of The Linux Foundation, please see our Trademark Usage page.
    </div>
    <div class="text-center flex flex-row content-center justify-center gap-5 mt-5">
        {
            footerLinks.map((item) => {
                return (
                        <a href={item.url} class="text-sm leading-none text-info-500 font-light">
                            {
                                item.icon ?
                                        <Icon name={item.icon}></Icon> : item.content
                            }
                        </a>
                )
            })
        }
    </div>
</footer>
