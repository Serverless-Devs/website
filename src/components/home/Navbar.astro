---
import Container from "../Container.astro";
import {Picture} from "astro:assets";
import logoImage from "../../assets/logo.png";
import {Astronav, MenuItems, MenuIcon} from "astro-navbar";
import '/node_modules/@astrojs/starlight/style/props.css';
import SmoothButton from "./SmoothButton.astro";
import Search from "./Search.astro";

const menuItems = [
    {
        title: 'SHOWCASE',
        path: '/aiMall'
    },
    {
        title: "DOCS",
        path: "/docs/overview"
    },
    {
        title: "BLOG",
        path: "/learning/all"
    },
    {
        title: "FAQ",
        path: "/faq"
    }
];
---

<Container>
    <header class="flex flex-col lg:flex-row justify-start lg:gap-20 items-center my-5">
        <div class="flex flex-row gap-10 justify-between w-full px-5">
            <div class="flex flex-1 lg:w-auto items-center justify-center md:justify-start">
                <a href="/public" class="w-14">
                    <Picture
                            src={logoImage}
                            alt="Serverless Devs"
                            widths={[200, 400, 600]}
                            sizes="(max-width: 800px) 100vw, 620px"
                            loading="eager"
                            format="avif"
                    />
                </a>
            </div>
            <ul class="hidden flex-row gap-3 pl-10 pr-10 backdrop-blur items-center md:flex lg:flex">
                {
                    menuItems.map((item, index) => (
                            <>
                                <li>
                                    <a
                                            href={item.path}
                                            class="flex text-white font-light lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900 no-underline"
                                    >
                                        <span> {item.title}</span>
                                    </a>
                                </li>
                                {
                                    index + 1 != menuItems.length &&
                                        <div class="w-[1px] h-1/3 bg-white leading-none"></div>
                                }
                            </>
                    ))
                }
            </ul>

            <div class="flex-1 flex-row items-center justify-end gap-4 hidden lg:flex">
                <Search labels={{'search.label': '搜索文档'}}></Search>
                <SmoothButton href="https://github.com/Serverless-Devs/Serverless-Devs">GITHUB</SmoothButton>
            </div>
        </div>
    </header>
</Container>
