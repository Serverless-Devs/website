---
let {
    href,
    style,
    onlyIcon,
    id
} = Astro.props;
---

<a href={href} target="_blank" id={id} style={style}
   class={`inline-flex flex-nowrap text-nowrap text-white items-center justify-center bg-white/10 border-[0.8px] border-[#b3b6c1] ${onlyIcon ? 'rounded-full h-full aspect-square' : 'fullButton rounded-[32px] h-full px-8 py-2'}`}>
    <slot/>
    <img class="goIcon" src="/src/assets/icons/go.svg" alt=""/>
</a>


<style>

    .fullButton {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 0.8vw;
    }

    .goIcon {
        display: none;
        width: 0.7em;
        height: 0.7em;
    }

    .fullButton:hover .goIcon {
        display: block;
    }
</style>
